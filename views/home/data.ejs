<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/data.css">
    <script src="/js/main" defer></script>
</head>

<body>
    <main>
        <%- include('./form.ejs') %>
        <% if (blogs.length > 0) { %>
            <div class="grid">
                <% for (let blog of blogs) { %>
                    <article class="card-blog-items">
                        <header class="blog-header">
                            <button class="blog-title"><h3><%= blog.title %></h3></button>
                            <div class="card-content">
                                <h4 class="blog-author"><%= blog.author %></h2>
                            </div>
                            <div class="card-content">
                                <p class="blog-content"><%= blog.content %></p>
                            </div>
                            <div class="comments-action">
                                <form action="/comments" method="POST">
                                    <input type="hidden" name="blogId" value="<%= blog.id %>">
                                    <input type="text" name="comments" placeholder="Add a comment">
                                    <button class="btn" type="submit"> Submit </button>
                                </form>
                            </div>
                            <hr>

                            <% if (comments.length > 0) { %>
                                <div class="comment-content">
                                    <% for (let comment of comments) { %>
                                        <article class="comments">
                                            <div class="comment-items">
                                                <p class="comment-data"><%= comment.data %></p>
                                                <button class="btn-danger" type="submit"> Delete </button>
                                            </div>
                                        </article>
                                    <% } %>
                                </div>
                                <% } %>
                        </header>
                    </article>
                <% } %>
            </div>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>
  